{
  "hooks": {
    "before:init": [
      "pnpm run build:clean",
      "pnpm run test",
      "pnpm run build:prod"
    ]
  },
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): ${version}",
    "tagName": "${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "${version}"
  },
  "npm": {
    "publish": true,
    "tag": ["latest", "${version}"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "angular"
    }
  }
}
