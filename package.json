{
  "name": "cron-compose",
  "version": "0.1.0",
  "description": "Easily craft precise cron expressions using a declarative syntax.",
  "license": "MIT",
  "author": {
    "name": "Mahyar Mirrashed",
    "email": "mahyarmirrashed@users.noreply.github.com"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:main": "tsc -p tsconfig.json",
    "build:prod": "tsc -p tsconfig.prod.json",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "fix:prettier": "npx prettier --write scripts/ src/",
    "release": "release-it",
    "test": "jest",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch src/"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cron",
    "compose",
    "builder"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^7.0.2",
    "@types/jest": "^29.5.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "release-it": "^16.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
